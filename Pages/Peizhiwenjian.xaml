<Page x:Class="FrpcUI.Pages.Peizhiwenjian"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="615" d:DesignWidth="950"
      Title="ConfigPage">

    <Grid Background="#F4F5F7" Margin="20">
        <StackPanel HorizontalAlignment="Center" Width="910" Margin="0,0,0,408">
            <TextBlock Text="隧道列表" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- 顶部配置选择部分 -->
            <DockPanel Margin="10" LastChildFill="True">
                <ComboBox Width="180" 
                          Margin="30,0,10,0" 
                          x:Name="nodeComboBox"
                          VerticalAlignment="Center" 
                          ItemsSource="{Binding UniqueNodeModels}" 
                          SelectedItem="{Binding SelectedNode, Mode=TwoWay}"
                          Style="{StaticResource RoundedComboBoxStyle}"
                          Background="#E6F3FF" 
                          Foreground="#cfe2f3" 
                          BorderBrush="#cfe2f3" 
                          BorderThickness="1">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Node}" 
                                       x:Name="node"
                                      Foreground="#333333" 
                                      FontSize="14"
                                      Margin="3,0"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- 绿色风格的ComboBox -->
                <ComboBox Width="300" 
                          Margin="35,0,0,0" 
                          VerticalAlignment="Center" 
                          ItemsSource="{Binding FilteredSuidaoModels}" 
                          SelectedItem="{Binding SelectedSuidao, Mode=TwoWay}"
                          
                          Style="{StaticResource RoundedComboBoxStyle}"
                          Background="#E6F3FF" 
                          Foreground="#cfe2f3" 
                          BorderBrush="#cfe2f3"  
                          BorderThickness="1">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <!-- 显示文本 + ❌ 按钮 -->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- 节点名称 -->
                                <TextBlock Text="{Binding Name}" 
                                           x:Name="suidao"
                                          Foreground="#333333" 
                                          FontSize="14"
                                          Margin="3,0"
                                          ToolTip="为空代表选中当前节点下的全部隧道"
                                          ToolTipService.InitialShowDelay="200"
                                           ToolTipService.BetweenShowDelay="0"
                                           ToolTipService.ShowDuration="60000"/>

                                <!-- ❌ 按钮（点击清除选择） -->
                                <Button Grid.Column="1"
                                        Content="❌"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="5,0"
                                        VerticalAlignment="Center"
                                        Click="ClearName_Click">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Opacity="0">

                                                <ContentPresenter 
                                                    Content="{TemplateBinding Content}"
                                                    
                                                    Margin="{TemplateBinding Padding}"/>
                                            </Border>

                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Opacity" Value="1"/>
                                                    <!-- 鼠标悬停时显示 -->
                                                    <Setter TargetName="border" Property="Background" Value="#10000000"/>
                                                    <Setter Property="ToolTip" Value="清除隧道名代表选中当前节点下的全部隧道"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>


                <StackPanel Orientation="Horizontal" >
                    <Button Click="Shuaxing_Click" Margin="0,0,75,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" 
                    CornerRadius="10" 
                    Background="White" Width="27"
                    VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <Path Data="M12,6V9L16,5L12,1V4A8,8 0 0,0 4,12C4,13.57 4.46,15.03 5.24,16.26L6.7,14.8C6.25,13.97 6,13 6,12A6,6 0 0,1 12,6M18.76,7.74L17.3,9.2C17.74,10.04 18,11 18,12A6,6 0 0,1 12,18V15L8,19L12,23V20A8,8 0 0,0 20,12C20,10.43 19.54,8.97 18.76,7.74Z"  
                          Fill="Black" 
                          Stretch="Uniform" 
                          Width="20" 
                          Height="20" />

                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <!-- 鼠标悬停效果 -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Cursor" Value="Hand"/>

                                    </Trigger>
                                    <!-- 按下效果 -->
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="BorderBrush" Value="#E0E0E0"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="生成" Width="100" Height="30" Padding="5" Margin="0,0,10,0" 
                            Background="#2080f0" Foreground="White" BorderThickness="0"
                            Click="Shencheng_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" 
                                        CornerRadius="10" 
                                        Background="{TemplateBinding Background}" 
                    
                                        BorderThickness="1">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <!-- 鼠标悬停效果 -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Cursor" Value="Hand"/>

                                        <Setter TargetName="border" Property="BorderBrush" Value="#2080f0"/>
                                    </Trigger>
                                    <!-- 按下效果 -->
                                    <Trigger Property="IsPressed" Value="True">

                                        <Setter TargetName="border" Property="BorderBrush" Value="#2080f0"/>
                                    </Trigger>

                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Content="写入" Width="100" Height="30" Padding="5" Margin="10,0,10,0" 
                            Background="#2080f0" Foreground="White" BorderThickness="0"
                            Click="Write_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" 
                                            CornerRadius="10" 
                                            Background="{TemplateBinding Background}" 

                                            BorderThickness="1">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <!-- 鼠标悬停效果 -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Cursor" Value="Hand"/>

                                        <Setter TargetName="border" Property="BorderBrush" Value="#2080f0"/>
                                    </Trigger>
                                    <!-- 按下效果 -->
                                    <Trigger Property="IsPressed" Value="True">

                                        <Setter TargetName="border" Property="BorderBrush" Value="#2080f0"/>
                                    </Trigger>

                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </DockPanel>

            <!-- 显示配置 -->
            <ScrollViewer  Background="White" Padding="15" Margin="10,10,10,10" VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Disabled" BorderBrush="#E0E0E0" BorderThickness="1" >
                <TextBox x:Name="configText" 
                         Text="" 
                         FontFamily="Consolas" 
                         FontSize="14"
                         IsReadOnly="False" 
                         Background="Transparent" 
                         BorderThickness="0" 
                         Margin="0,0,0,5"
                         ToolTip="可手动进行复制，或点按写入即可自动写入配置文件"
                         ToolTipService.InitialShowDelay="200"
                         ToolTipService.BetweenShowDelay="0"
                         ToolTipService.ShowDuration="60000"/>
            </ScrollViewer>











        </StackPanel>

    </Grid>
</Page>
